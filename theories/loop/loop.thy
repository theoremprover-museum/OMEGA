(in-package :omega)

(th~deftheory loop
              (uses quasigroup)
	      (help "Loop theory"))






;;;
;;; Definition of LOOP
;;;

(th~defdef loop
	   (in loop)
	   (type-variables aa)
	   (definition
	     (lam (L (o aa))
		  (lam (op (aa aa aa))
		       (and (not-empty L)
			    (and (closed-under L op)
				 (and (divisors-exist L op)
				      (exists-sort (lam (e aa) (unit L op e)) L)))))))
	   (help "Definition of a Loop."))

